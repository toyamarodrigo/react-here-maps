{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true, // skips type checking declaration files
    "jsx": "react-jsx",
    "module": "ESNext", // indicates that we will be compiling the code into the latest version of JavaScript modules
    "declaration": true,
    "declarationDir": "types",
    "rootDir": "./src",
    "sourceMap": true, // tells the compiler that we want source map generation
    "outDir": "dist",
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2017", "es2018", "es2019", "es2020", "esnext", "esnext.asynciterable"]
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ]
}