{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true, // tells the compiler that we want source map generation
    "skipLibCheck": true, // skips type checking declaration files
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext", // indicates that we will be compiling the code into the latest version of JavaScript modules
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.json", "./src/**/*.d.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ]
}