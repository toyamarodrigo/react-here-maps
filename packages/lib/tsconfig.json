{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["dist","**/*.spec.ts","**/*.spec.tsx"]
}
